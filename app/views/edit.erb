<h2>Edit Recipe <%= @recipe.id %></h2>
<form action="/recipes/<%= @recipe.id %>" method="post">
<input id="hidden" type="hidden" name="_method" value="patch">
  <p>New Name: <input type="text" name="name" value="<%= @recipe.name %>"></p>
  <p>New Ingredients: <input type="text" name="ingredients" value="<%= @recipe.ingredients %>"></p>
  <p>New Cook Time: <input type="text" name="cook_time" value="<%= @recipe.cook_time %>"></p>
  <input type="submit" value="submit">
</form>